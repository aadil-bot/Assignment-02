<%- include ./partials/header.ejs %>
<%- include ./partials/main_nav.ejs %>

<main class="container mt-5">
  <section id="contact">
    <h1 class="display-4"><%= title %></h1>
    <hr>
    
    <form action="/contact" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      
      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      
      <div class="mb-3">
        <label for="phone" class="form-label">Cell No:</label>
        <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{10}" placeholder="e.g., 5551234567" required>
      </div>
      
      <div class="mb-3">
        <label for="comments" class="form-label">Comments:</label>
        <textarea class="form-control" id="comments" name="comments" rows="5" required></textarea>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </section>
</main>

<%- include ./partials/footer.ejs %>